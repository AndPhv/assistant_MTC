<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000353">

    <ImageView
        android:id="@+id/emblem3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emblem" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="650dp"
        app:cardBackgroundColor="@color/green_bc"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/emblem3"
        app:layout_constraintEnd_toEndOf="@+id/emblem3"
        app:layout_constraintStart_toStartOf="@+id/emblem3"
        app:layout_constraintTop_toTopOf="@+id/emblem3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                app:srcCompat="@drawable/mirea_logo" />

            <TextView
                android:id="@+id/textViewNamePerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ваше имя"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#D1D1D1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/textViewNumPlatoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Номер взвода"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#D1D1D1"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#000000"
                android:textColorHint="#B1B1B1" />

            <Button
                android:id="@+id/buttonToComeIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#E77D00"
                android:text="Войти" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>